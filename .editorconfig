[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
max_line_length = 88

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[*.rst]
indent_style = space
max_line_length = 80

[*.yml]
indent_style = space
indent_size = 2

[*.xml]
insert_final_newline = false

[Justfile]
indent_style = space
indent_size = 4

[tests/test_reduce_whitespace.py]
trim_trailing_whitespace = false
